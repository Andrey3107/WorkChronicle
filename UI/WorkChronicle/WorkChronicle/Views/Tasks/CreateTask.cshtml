@{
    ViewBag.Title = "Create task";
}

<div class="row mt-4">
    <h1 id="page-title">Create task:</h1>
</div>

<div id="edit-task-page">
    <div class="row option">
        <div class="col-2"><span>Project:</span></div>
        <div class="col-10"><select id="projects-ddl" class="form-select" aria-label="Default select example"></select></div>
    </div>

    <div class="row option">
        <div class="col-2"><span>Type:</span></div>
        <div class="col-10"><select id="ticket-type-ddl" class="form-select" aria-label="Default select example"></select></div>
    </div>

    <div class="row option">
        <div class="col-2"><span>Status:</span></div>
        <div class="col-10"><select id="ticket-status-ddl" class="form-select" aria-label="Default select example"></select></div>
    </div>

    <div class="row option">
        <div class="col-2"><span>Name:</span></div>
        <div class="col-10"><input class="form-control" id="task-name"></div>
    </div>

    <div class="row option">
        <div class="col-2"><span>Description:</span></div>
        <div class="col-10"><textarea class="form-control" id="description" rows="3"></textarea></div>
    </div>

    <div class="row option">
        <div class="col-6">
            <div class="row">
                <div class="col-4"><span>Assignee:</span></div>
                <div class="col-8"><select id="assignee-ddl" class="form-select" aria-label="Default select example"></select></div>
            </div>
        </div>
        <div class="col-6">
            <div class="row">
                <div class="col-6"><span>Start date:</span></div>
                <div class="col-6">
                    <div class="input-group date" id="start-datepicker">
                        <input type="text" class="form-control" id="start-date" />
                        <span class="input-group-append">
                            <span class="input-group-text bg-light d-block">
                                <i class="fa fa-calendar"></i>
                            </span>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row option">
        <div class="col-6">
            <div class="row">
                <div class="col-4"><span>Priority:</span></div>
                <div class="col-8"><select id="priority-ddl" class="form-select" aria-label="Default select example"></select></div>
            </div>
        </div>
        <div class="col-6">
            <div class="row">
                <div class="col-6"><span>End date:</span></div>
                <div class="col-6">
                    <div class="input-group date" id="end-datepicker">
                        <input type="text" class="form-control" id="end-date"/>
                        <span class="input-group-append">
                            <span class="input-group-text bg-light d-block">
                                <i class="fa fa-calendar"></i>
                            </span>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row option">
        <div class="col-6">
            <div class="row">
                <div class="col-4"><span>Completeness:</span></div>
                <div class="col-8"><select id="completeness-ddl" class="form-select" aria-label="Default select example">
                    <option value="0">0%</option>
                    <option value="10">10%</option>
                    <option value="20">20%</option>
                    <option value="30">30%</option>
                    <option value="40">40%</option>
                    <option value="50">50%</option>
                    <option value="60">60%</option>
                    <option value="70">70%</option>
                    <option value="80">80%</option>
                    <option value="90">90%</option>
                    <option value="100">100%</option>
                </select></div>
            </div>
        </div>
        <div class="col-6">
            <div class="row">
                <div class="col-6"><span>Estimated time:</span></div>
                <div class="col-6"><input type="number" class="form-control" id="estimated-time"></div>
            </div>
        </div>
    </div>
    
    <button id="btn-create-task" class="btn btn-primary">Create task</button>

</div>

<script>
    $(document).ready(function () {
        const page = new Tasks();
        page.Init();
    });
</script>