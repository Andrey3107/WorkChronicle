@{
    ViewData["Title"] = "Analytics";
}

<div class="row mt-4">
    <h1 id="page-title">Analytics</h1>
</div>

<div id="analytics-page" class="row">
    <div id="filters" class="col-12">
        <div class="row">
            <div class="col-4">
                <div class="row option">
                    <div class="col-2"><span>Project:</span></div>
                    <div class="col-10"><select id="projects-ddl" class="form-select" aria-label="Default select example"></select></div>
                </div>
            </div>
            <div class="col-4">
                <div class="row option">
                    <div class="col-2"><span>Assignee:</span></div>
                    <div class="col-10"><select id="assignee-ddl" class="form-select" aria-label="Default select example"></select></div>
                </div>
            </div>
            <div class="col-4">
                <div class="row option">
                    <div class="col-2"><span>Ticket type:</span></div>
                    <div class="col-10"><select id="ticket-type-ddl" class="form-select" aria-label="Default select example"></select></div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-4">
                <div class="row option">
                    <div class="col-2"><span>Ticket status:</span></div>
                    <div class="col-10"><select id="ticket-status-ddl" class="form-select" aria-label="Default select example"></select></div>
                </div>
            </div>
            <div class="col-4">
                <div class="row option">
                    <div class="col-2"><span>Ticket priority:</span></div>
                    <div class="col-10"><select id="priority-ddl" class="form-select" aria-label="Default select example"></select></div>
                </div>
            </div>
            <div class="col-4">
                <div class="row option">
                    <div class="col-2"><span>Ticket place:</span></div>
                    <div class="col-10"><select id="place-ddl" class="form-select" aria-label="Default select example"></select></div>
                </div>
            </div>
        </div>
        <div class="row">
            <button id="update-chart" class="btn btn-sm btn-primary">Update chart</button>
        </div>
    </div>
    
    <div class="col-12"><div id="chart" style="width:100%; height:450px;"></div></div>
</div>

<script>
    $(document).ready(function () {
        const page = new Analytics();
        page.Init();
    });
</script>