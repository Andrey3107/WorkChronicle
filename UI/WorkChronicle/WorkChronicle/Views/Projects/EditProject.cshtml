@model WorkChronicle.ViewModels.EditProjectViewModel
@{
    ViewBag.Title = "Edit project";
}
<form asp-action="EditProject" asp-controller="Projects">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <input type="hidden" asp-for="Id" />
    </div>
    <div class="form-group">
        <label asp-for="ProjectName" class="control-label">Project Name</label>
        <input type="text" asp-for="ProjectName" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-outline-secondary" />
    </div>
</form>